<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.filestorage.client.CloudPartController">
  
  <HBox>
    <TextField fx:id="pathField" HBox.hgrow="ALWAYS" />
    <Button text="UP &#129045;" onAction = "#goUpAction" />
  </HBox>
  
  <TableView fx:id = "fileTable" VBox.vgrow="ALWAYS" />
  
  <HBox spacing="5">
    <Button text="Download" onAction="#downloadAction" HBox.hgrow="ALWAYS" maxWidth="Infinity"  />
    <Button text="Remove" onAction="#removeAction" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
    <Button text="Create directory" onAction="#createDirAction" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
    <padding>
       <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
  </HBox>
  
</VBox>


